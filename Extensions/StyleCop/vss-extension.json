{
 "manifestVersion": 1,
 "id": "BM-VSTS-StyleCop-Task",
 "version": "1.0.0",
 "name": "StyleCop Runner Build Task",
 "publisher": "richardfennellBM",
  "description": "Run tests StyleCop using settings files in the project folders. Using StyleCop 4.7.49.0.",
 "categories": [
    "Build and release"
  ],
 "targets": [
         {
             "id": "Microsoft.VisualStudio.Services"
         }
     ],
  "tags": [
    "StyleCop",
    "Analysis",
    "Test"
  ],   
   "galleryFlags": [
        "Public"
    ],
  "branding": {
        "color": "#f97923",
        "theme": "dark"
  },
  "icons": {
      "default": "images/logo.png"
  },
   "links": {
    "getstarted": {
      "uri": "https://github.com/rfennell/vNextBuild/wiki/StyleCop-Runner-Task"
    },
    "support": {
      "uri": "https://github.com/rfennell/vNextBuild/issues"
    }
  },
  "screenshots": [
    {
      "path": "images/screenshot1.png"
    },
    {
      "path": "images/screenshot2.png"
    }
  ],
  "content": {
    "details": {
      "path": "readme.md"
    },
    "license": {
      "path": "license.md"
    }
  },
  "files": [
    {
      "path": "StyleCopTask"
    }
  ],
  "contributions": [
    {
      "id": "Stylecop-Runner",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "StyleCopTask"
      }
    }
  ]
}
{
  "id": "31EF0033-64E3-4C55-B888-F446541474A6",
  "name": "Pester",
  "friendlyName": "Pester Test Runner from Black Marble",
  "description": "Run Pester tests without the need to install Pester in with the PMModule folder or in the source repo (Using Pester 3.3.5)",
  "helpMarkDown": "Version: #{Build.BuildNumber}#. [More Information](https://github.com/rfennell/vNextBuild/wiki/Pester-Task/)",

  "category": "Test",
  "visibility": [
                "Build",
                "Release"
                ],
  "author": "Richard Fennell",
  "version": {
    "Major": 1,
    "Minor": 1,
    "Patch": 0
  },
  "demands": [],
  "minimumAgentVersion": "1.82.0",
  "groups": [
    {
      "name":"tags",
      "displayName":"Tags",
      "isExpanded":false
    },
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
  ],
  "inputs": [
    {
      "name": "scriptFolder",
      "type": "string",
      "label": "Scripts Folder",
      "defaultValue": "$(Build.SourcesDirectory)\\*",
      "required": true,
      "helpMarkDown": "Folder to run scripts from"
    },
    {
      "name": "resultsFile",
      "type": "string",
      "label": "Results File",
      "defaultValue": "$(Build.SourcesDirectory)\\Test-Pester.XML",
      "required": true,
      "helpMarkDown": "Results File (nUnit format)"
    },
    {
      "name": "tag",
      "type": "string",
      "label": "Tags",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Tags used to filter which tests to run.",
      "groupName":"tags"
    },
    {
      "name": "excludeTag",
      "type": "string",
      "label": "Exclude Tag",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Tags to exclude when running tests.",
      "groupName":"tags"
    },
    {
      "name": "pesterVersion",
      "type": "pickList",
      "label": "Pester version",
      "defaultValue": "3.4.3",
      "required": true,
      "helpMarkDown": "Verson of Pester to use",
      "groupName":"advanced",
      "options": {
          "3.4.3": "3.4.3",
          "4.0.3": "4.0.3"
      }
    },
    {
      "name": "run32Bit",
      "type": "boolean",
      "label": "Run in 32bit",
      "defaultValue": "False",
      "required": true,
      "helpMarkDown": "Run in 32bit",
      "groupName":"advanced"
    },
    {
      "name": "moduleFolder",
      "type": "string",
      "label": "Module Folder override",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "If left blank the Pester module stored in this task will be used, to load the Pester module from elsewhere set the path",
      "groupName":"advanced"
    }
  ],
  "instanceNameFormat": "Pester Test Runner",
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\Pester.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
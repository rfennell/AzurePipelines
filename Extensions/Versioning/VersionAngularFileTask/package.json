{
  "name": "VersionAngularFileTask",
  "description": "VersionAngularFileTask",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run transpile ",
    "package": "npm prune -production && npm run copy",
    "copy": "ncp ./node_modules ./task/node_modules && ncp ./dist/src ./task",
    "clean": "rimraf --glob ./dist/src && rimraf --glob ./dist/test && rimraf --glob ./task/*.js && rimraf --glob ./task/*.js.map && rimraf --glob ./task/node_modules",
    "transpile": "tsc -p ./",
    "lint": "tslint -c tslint.json src/*.ts test/*.ts",
    "test": "mocha -r ts-node/register ./test/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test-output/test-results.xml ",
    "test-no-logger": "mocha -r ts-node/register ./test/*.ts "
  },
  "main": "VersionAngularFileTask.js",
  "dependencies": {
    "azure-pipelines-task-lib": "^4.10.0",
    "Buffer": "^0.0.0",
    "fs": "^0.0.1-security",
    "fs-copy-file-sync": "^1.1.1",
    "ncp": "^2.0.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^2.2.48",
    "@types/node": "^17.0.13",
    "chai": "^4.2.0",
    "fs-extra": "^11.2.0",
    "mocha": "^9.2.2",
    "mocha-junit-reporter": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^3.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "author": "Richard Fennell",
  "license": "MIT"
}
